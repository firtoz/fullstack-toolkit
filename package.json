{
  "name": "@firtoz/router-toolkit",
  "version": "0.2.1",
  "description": "Type-safe React Router 7 framework mode helpers with enhanced fetching, form submission, and state management",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./*": [
      "./src/*.ts",
      "./src/*.tsx"
    ]
  },
  "files": [
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "echo 'No build step - using TypeScript source directly'",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "format": "biome format src --write",
    "test": "echo 'No tests yet'",
    "semantic-release": "semantic-release",
    "prepare": "husky"
  },
  "keywords": [
    "react-router",
    "react-router-7",
    "framework-mode",
    "hooks",
    "typescript",
    "form-submission",
    "fetching",
    "type-safe"
  ],
  "author": "Firtina Ozbalikchi <firtoz@github.com>",
  "license": "MIT",
  "homepage": "https://github.com/firtoz/router-toolkit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/firtoz/router-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/firtoz/router-toolkit/issues"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-router": "^7.6.3",
    "zod": "^3.25.69"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@types/react": "^19.1.8",
    "husky": "^9.1.7",
    "react": "^19.1.0",
    "react-router": "^7.6.3",
    "semantic-release": "^24.2.7",
    "typescript": "^5.8.3",
    "zod": "^3.25.74"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
