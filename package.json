{
  "name": "router-toolkit-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for router-toolkit and maybe-error packages",
  "workspaces": [
    "packages/*",
    "tests/*"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "typecheck": "bun run --filter='*' typecheck",
    "lint": "bun run --filter='*' lint",
    "format": "bun run --filter='*' format",
    "test": "bun run --filter='*' test",
    "prepare": "husky",
    "release": "git pull && bun run --filter='*' --serial semantic-release -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.7",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.0"
}
