{
  "extends": "semantic-release-monorepo",
  "branches": ["main"],
  "tagFormat": "@firtoz/router-toolkit@${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "bun --version && bun pm whoami",
        "prepareCmd": "bun pkg set version=${nextRelease.version}",
        "publishCmd": "bun publish --access public"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "CHANGELOG.md",
            "label": "Changelog"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): @firtoz/router-toolkit@${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
} 