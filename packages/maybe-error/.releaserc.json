{
  "extends": "semantic-release-monorepo",
  "branches": ["main"],
  "tagFormat": "@firtoz/maybe-error@${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "../../semantic-release-bun-publish.ts",
      {
        "npmPublish": true,
        "access": "public"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "CHANGELOG.md",
            "label": "Changelog"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): @firtoz/maybe-error@${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
} 